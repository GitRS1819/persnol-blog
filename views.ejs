
<!DOCTYPE html>
<html lan="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width-device-width,initial-scaler1.0">
        <!-- CSS only -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <meta http-equiv="X-UA-Compatiable" content="ie=edge">
        <title>Personal Blog</title>
    </head>
    <body>
        <div class="container">
            <h1 class="nb-4">Blog Articles</h1>
            <a href="/articles/new" class="btn btn-success">New Ariticles</a>
            <% articles.forEach(article => {%>
             <div class="card mt-4"> 
                 <div class="card-body">
                     <h4 class="card-title"><%= article.title %>
                    </h4>
                    <div class="card-subtitle text-muted mb-2">
                        <%= article.createdAt.toLocaleDateString() %>
                    </div>
                    <div class="card-text mb-2"><%= article.description %></div>
                 </div>
             </div>
            <% }) %>

        </div>
    </body>
    </html>